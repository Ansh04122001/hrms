@{
    string username = User.Identity.Name;
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>TimeSheet</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Display">Home</a></li>
                <li class="breadcrumb-item">TimeSheet</li>
                <li class="breadcrumb-item active"><a asp-controller="Dashboard" asp-action="TimeSheet">Add TimeSheet </a> </li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">TimeSheet</h5>
                        <div class="table-responsive">
                            <form asp-controller="Dashboard" asp-action="AddTimeSheet" method="post">
                                <table class="table">
                                    
                                    <tr>
                                        <td>
                                            <label for="EmployeeCode">Employee Code<span class="text-danger">*</span></label>
                                            <input type="text" class="form-control"  id="EmployeeCode" name="EmployeeCode" value="@Model.EmployeeCode" readonly required>
                                        </td>
                                        <td>
                                            <label for="EmployeeName">Employee Name<span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="EmployeeName" name="EmployeeName" value="@Model.EmployeeName" readonly required>
                                        </td>
                                        <td>
                                            <label for="ManagerName">Manager Name<span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="ManagerName" name="ManagerName" value="@Model.ManagerName" readonly required>
                                        </td>
                                        <td>
                                            <label for="Department">Department<span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="Department" name="Department" value="@Model.Department" readonly required>
                                        </td>
                                    </tr>
                                    <tr>
                                        
                                        <td>
                                            <label for="ProjectName">Project Name<span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="ProjectName" name="ProjectName" required>
                                        </td>
                                  
                                        <td>
                                            <label for="Date">Date<span class="text-danger">*</span></label>
                                            <input type="date" class="form-control" id="Date" name="Date" required>
                                        </td>
                                    

                                        <td>
                                            <label for="StartTime">Start Time<span class="text-danger">*</span></label>
                                            <input type="time" class="form-control" id="StartTime" name="StartTime" required>
                                        </td>
                                        <td>
                                            <label for="EndTime">End Time<span class="text-danger">*</span></label>
                                            <input type="time" class="form-control" id="EndTime" name="EndTime" required>
                                        </td>
                                       
                                   
                                    </tr>
                                    <tr>
                                        <td colspan="4">
                                            <label for="Description">Description<span class="text-danger">*</span></label>
                                            <textarea class="form-control" id="Description" name="Description" rows="3" required></textarea>
                                        </td>
                                    </tr>
                                </table>
                                <div class="text-right mt-4">
                                    <button type="submit" class="btn btn-sm btn-danger">Add Timesheet</button>
                                </div>
                            </form>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>
</main>