<main id="main" class="main">

    <div class="pagetitle">
        <h1>Profile</h1>
    </div>
    <section class="section profile">
        <div class="row">
          
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img src="@Model.EmpImages" alt="Employee Image" />
                        <p>@Model.FirstName @Model.LastName</p>
                    </div>
                </div>

            </div>

            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body pt-3">
                        <ul class="nav nav-tabs nav-tabs-bordered">
                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profile Details</button>
                            </li>
                        </ul>
                        <div class="tab-content pt-2">
                            <div class="tab-pane fade show active profile-overview" id="profile-overview">
                               

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Full Name</div>
                                    <div class="col-lg-9 col-md-8">@Model.FirstName @Model.LastName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Employee Code</div>
                                    <div class="col-lg-9 col-md-8">@Model.EmployeeCode</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Department</div>
                                    <div class="col-lg-9 col-md-8">@Model.DepartmentName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Manager</div>
                                    <div class="col-lg-9 col-md-8">@Model.ManagerName</div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Gender</div>
                                    <div class="col-lg-9 col-md-8">@Model.Gender</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Date of Birth</div>
                                    <div class="col-lg-9 col-md-8">@Model.DateOfBirth.ToShortDateString()</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Designation</div>
                                    <div class="col-lg-9 col-md-8">@Model.Designation</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Date of Joining</div>
                                    <div class="col-lg-9 col-md-8">@Model.DateOfJoining.ToShortDateString()</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Father's Name</div>
                                    <div class="col-lg-9 col-md-8">@Model.FatherName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Marital Status</div>
                                    <div class="col-lg-9 col-md-8">@Model.MaritalStatus</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Employee Contact</div>
                                    <div class="col-lg-9 col-md-8">@Model.EmployeeContact</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Email (Official)</div>
                                    <div class="col-lg-9 col-md-8">@Model.EmailOfficial</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-3 col-md-4 label">Present Address</div>
                                    <div class="col-lg-9 col-md-8">@Model.PresentAddress</div>
                                </div>

                                

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>